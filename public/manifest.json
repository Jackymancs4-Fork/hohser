{
  "manifest_version": 2,
  "name": "Highlight or Hide Search Engine Results",
  "short_name": "hohser",
  "version": "1",
  "developer": {
    "name": "Tomasz Pisarek",
    "url": "https://github.com/pistom"
  },

  "description": "Highlight or hide search engine results from specific domains.",

  "browser_action": {
    "default_title": "Highlight or Hide Search Engine Results",
    "default_popup": "popup.html"
  },

  "permissions": ["storage","contextMenus","activeTab"],

  "content_scripts": [
    {
      "matches": [
        "*://*.duckduckgo.com/*",
        "*://*.google.com/*",
        "*://*.google.pl/*",
        "*://*.google.fr/*",
        "*://*.google.es/*",
        "*://*.google.ca/*",
        "*://*.google.de/*",
        "*://*.google.jp/*",
        "*://*.google.au/*",
        "*://*.google.ru/*",
        "*://*.google.ru/*",
        "*://*.google.ch/*",
        "*://*.google.it/*",
        "*://*.google.nl/*",
        "*://*.google.se/*",
        "*://*.google.no/*",
        "*://*.google.ua/*",
        "*://*.yahoo.com/*",
        "*://*.qwant.com/*"
      ],
      "js": ["static/js/content.js"],
      "css": ["static/css/content.css"]
    }
  ],

  "content_security_policy": "script-src 'self'; object-src 'self';",  
  
  "applications": {
    "gecko": {
      "id": "{2c4b535d-e705-4a71-a925-b53a8bca13d1}",
      "strict_min_version": "52.0"
    }
  }
}
